<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:id="@+id/cardView_Grade"
    android:foreground="?android:selectableItemBackground"
    android:layout_margin="12dp"
    cardview:cardCornerRadius="8dp"
    cardview:cardBackgroundColor="#fefefe"
    cardview:cardElevation="2dp"
    cardview:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Subject : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cardSubjectShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardSubject"
            android:layout_toRightOf="@id/cardSubject"
            android:text="TextView"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cardGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardSubject"
            android:layout_marginTop="10dp"
            android:text="Your Grade : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cardGradeShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardGrade"
            android:layout_toRightOf="@id/cardGrade"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cardweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGrade"
            android:layout_marginTop="10dp"
            android:text="This subject weight : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cardweightShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardweight"
            android:layout_toRightOf="@id/cardweight"
            android:text="TextView"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            cardview:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGradeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/title_Grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:hint="Add Grade"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/subject_Grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_Grade"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:autofillHints="select" />



            <EditText
                android:id="@+id/weight_Grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_Grade"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:hint="Add Weight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/semisterText_Grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_Grade"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Semister"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/semister_group_Grade"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_below="@id/weight_Grade"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/semisterText_Grade"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/selectSemister1_Grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/selectSemister2_Grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="2" />
            </RadioGroup>

            <Button
                android:id="@+id/addBotton_Grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/semister_group_Grade"
                android:layout_marginTop="100dp"
                android:text="add" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
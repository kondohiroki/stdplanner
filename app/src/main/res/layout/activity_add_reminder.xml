<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hiroki.stdplanner.AddReminderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/title_Reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:hint="Add Title"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/alertDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_Reminder"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Alert Date"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/cPicker_Reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_Reminder"
                android:layout_toRightOf="@+id/alertDate"
                android:layout_alignBottom="@id/alertDate"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:background="#02ffffff"
                app:srcCompat="@drawable/ic_calendar_black" />

            <TextView
                android:id="@+id/showDate_Reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alertDate"
                android:layout_below="@id/title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/cPicker_Reminder"
                android:text="select alert date"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alertDate"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:hint="Note Here"
                android:inputType="textLongMessage"
                android:textSize="18sp" />

            <Button
                android:id="@+id/addBotton_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Note"
                android:text="add" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
